<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category_Product">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:text="CATEGORY"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pan"
            />
        <ImageView
            android:id="@+id/electric"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/electric"
            />
        <ImageView
            android:id="@+id/spoons"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/spoons"
            />
    </LinearLayout>



</RelativeLayout>


